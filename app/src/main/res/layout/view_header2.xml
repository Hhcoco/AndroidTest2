<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/header2_text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/color_F9AED1"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="全部"/>
        <TextView
            android:id="@+id/header2_text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="女装"/>
        <TextView
            android:id="@+id/header2_text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="男装"/>
        <TextView
            android:id="@+id/header2_text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="鞋包"/>
        <TextView
            android:id="@+id/header2_text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="居家"/>
        <TextView
            android:id="@+id/header2_text6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="美妆"/>
        <TextView
            android:id="@+id/header2_text7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="食品"/>

    </LinearLayout>

</LinearLayout>
