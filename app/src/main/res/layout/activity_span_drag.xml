<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wangliang160616.androidtest.activity.SpanDragActivity">
    <com.wangliang160616.androidtest.view.NewLinearLayout
        android:id="@+id/activity_span_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/activity_span_ll_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_span_rv_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F9AED1"/>
            </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_span_ll_right"
            android:layout_width="1px"
            android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_span_rv_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"/>
        </LinearLayout>
    </com.wangliang160616.androidtest.view.NewLinearLayout>
</LinearLayout>
    <ImageView
        android:id="@+id/activity_span_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>
